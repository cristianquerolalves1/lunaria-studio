---
import Background from "@/components/Background.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";
import type { Meta } from "@/config/landing.interface";
import "@fontsource-variable/rubik";

interface Props {
  meta?: Meta;
}

const {
  meta = {
    title: "Lunaria Studio",
    description: "Estudio creativo premium especializado en dise√±o, branding y desarrollo web.",
    lang: "es",
    charset: "UTF-8",
    ldJson: null // Correcto: null es permitido por el tipo
  }
} = Astro.props;

const ldJson = meta?.ldJson ? JSON.stringify(meta.ldJson) : null;
---
<!doctype html>
<html
  lang={meta.lang ?? "es"}
  class="scrollbar-thin scrollbar-thumb-primary scrollbar-track-transparent scroll-smooth"
>
  <head>
    <meta charset={meta.charset ?? "UTF-8"} />
    <title>{meta.title}</title>
    <meta name="description" content={meta.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={import.meta.env.SITE} />

    {ldJson && (
      <script type="application/ld+json" set:html={ldJson} is:inline />
    )}

    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>

  <body
    class="bg-white text-black dark:bg-black dark:text-white transition-colors duration-500 font-['Rubik_Variable'] relative overflow-x-hidden"
  >
    <div class="fixed inset-0 -z-10 bg-gradient-to-br from-blue-100/60 via-white/60 to-pink-100/60 dark:from-gray-900/70 dark:via-black/70 dark:to-gray-800/70 backdrop-blur-3xl transition-all duration-700"></div>

    <Background />
    <slot />
    <ScrollToTop />
  </body>
</html>

<style is:global>
  body {
    font-family: "Rubik Variable", Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  ::selection {
    background-color: rgba(0, 163, 255, 0.3);
    color: #000;
  }

  html.dark ::selection {
    background-color: rgba(255, 255, 255, 0.3);
    color: #fff;
  }

  * {
    transition-property: color, background-color, border-color, transform, opacity;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>
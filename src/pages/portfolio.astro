---
// src/pages/portfolio.astro
import Layout from "@/layouts/Layout.astro";
import Footer from "@/sections/Footer.astro";
import Header from "@/sections/Header.astro";

const meta = {
  title: "Portfolio | Lunaria Studio",
  description:
    "Explora nuestros proyectos de diseño, ilustración y arte digital en Lunaria Studio.",
  lang: "es",
  charset: "UTF-8",
};

const projects = [
  {
    title: "Diseño de personaje — Fantasma Victoriano a Caballo",
    image: "/portfolio/images/1.jpg",
    description:
      "Ilustración de una elegante fantasma femenina con sombrero y vestido morado, montada en un caballo espectral de pelaje azul pálido, en un fondo nocturno estrellado con vibe gótica y juguetona.",
    tags: ["Fantasía gótica", "Ilustración espectral", "Personaje victoriano"],
  },
  {
    title: "Diseño de escena romántica — Abrazos en el Prado",
    image: "/portfolio/images/2.jpg",
    description:
      "Pareja caricaturesca en un momento tierno: una chica de cabello largo abraza por detrás a un chico con barba y camiseta Armani, rodeados de flores y hierba verde bajo un cielo primaveral.",
    tags: ["Escena romántica", "Dibujo tierno", "Pareja caricaturesca"],
  },
  {
    title: "Diseño de edificio — Casa Mágica Turquesa",
    image: "/portfolio/images/3.jpg",
    description:
      "Fachada de una casa encantada de dos pisos en tonos menta y turquesa, con detalles victorianos, ventanas amarillas, puerta púrpura y un jardín de flores en la base, evocando un ambiente de cuento de hadas.",
    tags: ["Arquitectura", "Casa encantada", "Estilo cuento de hadas"],
  },
  {
    title: "Diseño de personaje — Diosa de los Cisnes",
    image: "/portfolio/images/4.jpg",
    description:
      "Ilustración etérea de una diosa de cabello rosado en vestido blanco y dorado, posando con gracia junto a cisnes enamorados en un lago, con pétalos de rosa flotando y aura romántica.",
    tags: ["Arte Mitológico", "Ilustración Onírica", "Estética Pastel"],
  },
  {
    title: "Diseño de meme — Chronic in Your System?",
    image: "/portfolio/images/5.jpg",
    description:
      "Portada humorística con un personaje en shock por efecto de marihuana, ojos hipnóticos, camiseta “Jah Doe” y fondo verde lleno de hojas de cannabis; texto explosivo y estilo trap psicodélico.",
    tags: ["Diseño Gráfico", "Humor psicodélico", "Ilustración Humorística"],
  },
  {
    title: "Diseño de personaje — Diva Zebra Print",
    image: "/portfolio/images/6.jpg",
    description:
      "Chica fashion con vestido cebra blanco y negro, botas rosas altas y maquillaje dramático, posando con actitud fiera sobre fondo degradado púrpura-amarillo, inspiración Y2K y pop diva.",
    tags: ["Ilustración De Moda", "Estética Y2K", "Diseño De Personajes"],
  },
];
---

<Layout meta={meta}>
  <Header />

  <main class="container mx-auto px-6 pt-32 md:pt-40 pb-20 max-w-6xl">
    <!-- Hero -->
    <section class="text-center mb-20">
      <h1 class="text-5xl md:text-6xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        Portfolio de Diseño
      </h1>
      <p class="mt-4 text-lg text-muted-foreground max-w-2xl mx-auto">
        Una selección de proyectos que combinan creatividad, técnica y emoción visual.
      </p>
    </section>

    <!-- Galería -->
    <section id="gallery" class="grid gap-10 md:grid-cols-2 lg:grid-cols-3">
      {projects.map((project, index) => (
        <article class="group bg-card border rounded-2xl overflow-hidden shadow hover:shadow-lg transition-shadow duration-300">
          <div class="overflow-hidden cursor-pointer">
            <img
              src={project.image}
              alt={project.title}
              loading="lazy"
              class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300"
              data-index={index}
              onclick="openLightbox(this)"
            />
          </div>
          <div class="p-6">
            <h2 class="text-2xl font-semibold mb-2">{project.title}</h2>
            <p class="text-muted-foreground mb-4">{project.description}</p>
            <ul class="flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <li class="px-3 py-1 text-sm bg-muted rounded-full">{tag}</li>
              ))}
            </ul>
          </div>
        </article>
      ))}
    </section>

    <!-- CTA final -->
    <section class="text-center mt-24">
      <p class="text-lg text-muted-foreground mb-6">
        ¿Quieres colaborar o ver más trabajos?
      </p>
      <a
        href="/#contact-section"
        class="inline-block px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:opacity-90 transition"
      >
        Contáctanos
      </a>
    </section>
  </main>

  <!-- Lightbox -->
  <div
    id="lightbox"
    class="fixed inset-0 bg-black/80 backdrop-blur-xl hidden items-center justify-center z-50 transition-opacity duration-300"
    onclick="closeLightbox()"
  >
    <div
      class="relative max-w-5xl w-full flex flex-col items-center px-6 select-none"
      onclick="event.stopPropagation()"
    >
      <img
        id="lightboxImage"
        src=""
        alt=""
        class="max-h-[75vh] w-auto object-contain rounded-3xl shadow-2xl border border-white/10 opacity-0 scale-95 transition-all duration-300"
      />

      <!-- Card de descripción -->
      <div
        id="lightboxCard"
        class="absolute bottom-8 left-1/2 -translate-x-1/2 bg-white/20 backdrop-blur-2xl border border-white/30 text-white max-w-md w-[90%] p-6 rounded-3xl shadow-2xl opacity-0 translate-y-4 transition-all duration-500 bg-gradient-to-br from-white/15 via-white/10 to-white/5 ring-1 ring-white/10"
      >
        <h3 id="lightboxTitle" class="text-2xl font-semibold mb-2 drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)]"></h3>
        <p id="lightboxDesc" class="text-base leading-relaxed opacity-90 drop-shadow-[0_1px_3px_rgba(0,0,0,0.5)]"></p>
      </div>

      <!-- Navegación -->
      <button
        id="prevBtn"
        class="absolute left-4 md:left-10 top-1/2 -translate-y-1/2 text-white text-4xl font-light hover:opacity-80 transition"
        onclick="changeImage(-1)"
      >
        Left Arrow
      </button>
      <button
        id="nextBtn"
        class="absolute right-4 md:right-10 top-1/2 -translate-y-1/2 text-white text-4xl font-light hover:opacity-80 transition"
        onclick="changeImage(1)"
      >
        Right Arrow
      </button>

      <!-- Cerrar -->
      <button
        id="closeBtn"
        class="absolute top-6 right-8 text-white text-4xl font-light hover:opacity-70"
        onclick="closeLightbox()"
      >
        Close
      </button>
    </div>
  </div>

  <Footer />
</Layout>

<!-- Script Lightbox (is:inline → NO TypeScript) -->
<script is:inline>
  const projectData = [
    { title: "Ilustración de personaje — Fantasma Victoriano a Caballo", image: "/portfolio/images/1.jpg", description: "Personaje espectral femenino en atuendo victoriano, montado en corcel etéreo con paleta nocturna y detalles góticos." },
    { title: "Ilustración romántica — Abrazo en el Prado", image: "/portfolio/images/2.jpg", description: "Escena costumbrista de pareja en entorno natural, con énfasis en expresiones afectivas y paleta primaveral." },
    { title: "Diseño arquitectónico — Residencia Mágica Turquesa", image: "/portfolio/images/3.jpg", description: "Fachada de vivienda fantástica en tonos pastel, con elementos neoclásicos y jardinería integrada." },
    { title: "Ilustración mitológica — Diosa de los Cisnes", image: "/portfolio/images/4.jpg", description: "Representación alegórica de deidad acuática en pose serena, acompañada de cisnes y simbolismo floral." },
    { title: "Diseño gráfico — Chronic in Your System?", image: "/portfolio/images/5.jpg", description: "Portada conceptual con temática cannábica, uso de tipografía expresiva y patrón repetitivo vegetal." },
    { title: "Ilustración de moda — Diva Zebra Print", image: "/portfolio/images/6.jpg", description: "Personaje estilizado con estampado animal print, paleta contrastada y pose editorial de alta costura." },
  ];

  let currentIndex = 0;
  const lightbox = document.getElementById("lightbox");
  const img = document.getElementById("lightboxImage");
  const titleEl = document.getElementById("lightboxTitle");
  const descEl = document.getElementById("lightboxDesc");
  const card = document.getElementById("lightboxCard");

  function openLightbox(el) {
    currentIndex = parseInt(el.dataset.index);
    updateLightbox();
    lightbox.classList.remove("hidden");
    lightbox.classList.add("flex");
    document.body.style.overflow = "hidden";
    setTimeout(() => {
      img.classList.remove("opacity-0", "scale-95");
      card.classList.remove("opacity-0", "translate-y-4");
    }, 80);
  }

  function closeLightbox() {
    img.classList.add("opacity-0", "scale-95");
    card.classList.add("opacity-0", "translate-y-4");
    setTimeout(() => {
      lightbox.classList.add("hidden");
      lightbox.classList.remove("flex");
      document.body.style.overflow = "auto";
    }, 300);
  }

  function changeImage(dir) {
    currentIndex = (currentIndex + dir + projectData.length) % projectData.length;
    updateLightbox(true);
  }

  function updateLightbox(animated = false) {
    const { image, title, description } = projectData[currentIndex];
    img.classList.add("opacity-0", "scale-95");
    card.classList.add("opacity-0", "translate-y-4");
    setTimeout(() => {
      img.src = image;
      titleEl.textContent = title;
      descEl.textContent = description;
      setTimeout(() => {
        img.classList.remove("opacity-0", "scale-95");
        card.classList.remove("opacity-0", "translate-y-4");
      }, 80);
    }, animated ? 150 : 0);
  }

  document.addEventListener("keydown", (e) => {
    if (lightbox.classList.contains("hidden")) return;
    if (e.key === "ArrowRight") changeImage(1);
    if (e.key === "ArrowLeft") changeImage(-1);
    if (e.key === "Escape") closeLightbox();
  });
</script>
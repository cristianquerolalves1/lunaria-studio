---
import Action from "@/components/Action.astro";

interface Props {
  data: {
    title: string;
    subTitle: string;
    primaryCta: string;
    secondaryCta: string;
    highlightedTitle?: string;
  };
}

const { data } = Astro.props;
---

<section 
  id="hero-section" 
  class="flex justify-center items-center h-screen w-full bg-white/10 dark:bg-black/10 backdrop-blur-md text-black dark:text-white"
>
  <div class="md:w-1/2 text-center">
    <h1 class="text-4xl md:text-6xl font-semibold">
      {data.title}
      <span class="text-primary dark:text-secondary"> {data.highlightedTitle} </span>
    </h1>
    <h2 class="mt-10 text-lg md:text-2xl opacity-80">
      {data.subTitle}
    </h2>
    <div class="flex justify-center gap-6 mt-10">
      <Action
        as="a"
        type="button"
        class="bg-black/80 text-white dark:bg-secondary/80 dark:text-black backdrop-blur-sm"
        href="#plans-section"
      >
        {data.primaryCta}
      </Action>
      <Action
        as="a"
        type="button"
        class="bg-transparent text-black/90 dark:text-white border border-black/50 dark:border-white/50 backdrop-blur-sm"
        href="/portfolio"
        target="_blank"
      >
        {data.secondaryCta}
      </Action>
    </div>
    <div class="flex justify-center mt-32">
      <Action
        as="a"
        class="flex justify-center items-center animate-bounce border-2 border-transparent bg-primary/80 text-white dark:bg-secondary/80 dark:text-black rounded-full w-14 h-14 hover:bg-white/90 hover:text-primary hover:border-primary dark:hover:bg-black/90 dark:hover:text-secondary dark:hover:border-secondary transition backdrop-blur-sm"
        href="#services-section"
        title="arrow down icon"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3"></path>
        </svg>
      </Action>
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  #hero-section {
    opacity: 0;
    animation: fadeIn 0.8s ease-in-out forwards;
  }
</style>

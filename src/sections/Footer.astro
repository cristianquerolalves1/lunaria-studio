---
import Action from "@/components/Action.astro";
import type { FooterData } from "@/config/landing.interface";

interface Props {
  data?: FooterData;
}

const { data } = Astro.props;

// Datos por defecto
const defaultFooter: FooterData = {
  logo: "Lunaria Studio",
  description:
    "Creamos experiencias digitales únicas que fusionan diseño, tecnología y estrategia para llevar tu marca al siguiente nivel.",
  links: [
    { label: "Inicio", href: "/" },
    { label: "Servicios", href: "/#services-section" },
    { label: "Planes", href: "/#pricing-section" },
    { label: "Contacto", href: "/#contact-section" },
    { label: "Política de Privacidad", href: "/privacy-policy" },
    { label: "Términos y Condiciones", href: "/terms-and-conditions" },
  ],
  socials: [
    { icon: "logo-instagram", href: "https://instagram.com" },
    { icon: "logo-twitter", href: "https://twitter.com" },
    { icon: "logo-linkedin", href: "https://linkedin.com" },
    { icon: "logo-github", href: "https://github.com" },
  ],
};

const footerData = data ?? defaultFooter;
---

<footer
  class="w-full backdrop-blur-2xl border-t border-white/20 dark:border-white/10
         bg-white/60 dark:bg-black/40
         text-black dark:text-gray-200 transition-all duration-500"
>
  <div class="flex flex-col justify-center text-center gap-y-8 pt-12 pb-6 max-w-5xl mx-auto px-6">
    
    <!-- Logo -->
    <section>
      <Action as="a" type="text" class="text-3xl md:text-4xl font-semibold tracking-wide text-black dark:text-white" href="/">
        {footerData.logo}
      </Action>
    </section>

    <!-- Descripción -->
    <section>
      <p class="max-w-2xl mx-auto text-gray-600 dark:text-gray-300 md:text-lg leading-relaxed">
        {footerData.description}
      </p>
    </section>

    <!-- Enlaces -->
    <section class="flex flex-wrap justify-center gap-x-6 gap-y-3 px-4 md:px-0 md:text-base">
      {footerData.links.map((link) => (
        <Action
          as="a"
          type="text"
          href={link.href}
          class="hover:text-pink-500 dark:hover:text-purple-400 transition-colors duration-300"
        >
          {link.label}
        </Action>
      ))}
    </section>

    <!-- Redes sociales -->
    <section class="flex flex-row flex-wrap justify-center gap-x-6 mt-4">
      {footerData.socials.map((social) => (
        <a
          href={social.href}
          target="_blank"
          rel="noopener noreferrer"
          class="w-10 h-10 flex items-center justify-center rounded-full 
                 bg-black/10 dark:bg-white/10 
                 hover:bg-pink-500 dark:hover:bg-purple-500 
                 text-black dark:text-white
                 transition-all duration-500 hover:scale-110"
        >
          <ion-icon name={social.icon} class="text-2xl"></ion-icon>
        </a>
      ))}
    </section>

    <!-- Derechos -->
    <section class="mt-8 text-sm text-gray-500 dark:text-gray-400">
      © {new Date().getFullYear()} Lunaria Studio. Todos los derechos reservados.
    </section>
  </div>
</footer>

<!-- Ionicons -->
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

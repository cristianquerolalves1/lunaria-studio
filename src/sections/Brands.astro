---
import Action from "@/components/Action.astro";
import SectionTitle from "@/components/SectionTitle.astro";
import type { BrandsData } from "@/config/landing.interface";

interface Props {
  data: BrandsData;
}

const { data } = Astro.props;
---

<section class="flex flex-col justify-between gap-y-10 md:gap-y-0 md:gap-x-7 md:flex-row mb-20 w-full">
  <!-- Título y descripción -->
  <div class="w-11/12 flex flex-col gap-y-6 text-center md:text-start">
    <SectionTitle>{data.title}</SectionTitle>
    <p class="text-lg md:text-xl">{data.description}</p>
  </div>

  <!-- Grid de marcas -->
  <div class="grid grid-cols-2 md:grid-cols-3 gap-y-8 w-full justify-items-center">
    {data.brands.map((brand) => (
      <div class="hover:scale-110 transition transform" key={brand.icon}>
        <Action as="a" href={brand.href} target="_blank" title={brand.icon}>
          <ion-icon
            name={brand.icon.toLowerCase()}
            class="text-5xl md:text-6xl text-black dark:text-white"
          ></ion-icon>
        </Action>
      </div>
    ))}
  </div>
</section>

<!-- Ionicons CDN -->
<script is:external type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script is:external nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
